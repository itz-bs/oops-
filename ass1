class User {
    private String username;
    private String password;

    public User(String user, String pass) {
        username = user;
        if (isValidPassword(pass)) {
            password = pass;
        } else {
            throw new IllegalArgumentException("Password does not meet security requirements.");
        }
    }

    private boolean isValidPassword(String pass) {
        return pass != null &&
               pass.length() >= 8 &&
               pass.matches(".*[A-Z].*") &&
               pass.matches(".*[a-z].*") &&
               pass.matches(".*\\d.*") &&
               pass.matches(".*[!@#$%^&()].*");
    }

    public boolean authenticate(String input) {
        return password.equals(input);
    }

    public boolean updatePassword(String oldPass, String newPass) {
        if (authenticate(oldPass)) {
            if (isValidPassword(newPass)) {
                password = newPass;
                return true;
            } else {
                System.out.println("New password does not meet security requirements.");
            }
        } else {
            System.out.println("Old password is incorrect.");
        }
        return false;
    }

    public String getUsername() {
        return username;
    }
}
public class ass1 {
    public static void main(String[] args) {
        User user = new User("john_doe", "Password1!");

        System.out.println("Username: " + user.getUsername());

        if (user.updatePassword("Password1!", "NewPass2@")) {
            System.out.println("Password updated successfully.");
        } else {
            System.out.println("Password update failed.");
        }
    }
}
